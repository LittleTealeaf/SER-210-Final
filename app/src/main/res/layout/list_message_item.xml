<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="7dp"
        android:layout_marginHorizontal="4dp"
        app:cardPreventCornerOverlap="true"
        android:layout_marginBottom="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/chat_avatar_size"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                    android:layout_height="@dimen/chat_avatar_size"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/list_message_imageview_avatar" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/list_message_text_user"
                            android:textStyle="bold" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                        android:id="@+id/list_message_text_time"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="10dp"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/list_message_text_message" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:id="@+id/list_message_recyclerview_attachable"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>