<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation_main"
        app:startDestination="@id/loginFragment">

    <fragment
            android:id="@+id/loginFragment"
            android:name="edu.quinnipiac.ser210.githubapp.ui.fragments.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login">
        <action
                android:id="@+id/action_loginFragment_to_homeFragment2"
                app:destination="@id/homeFragment2" />
    </fragment>
    <fragment
            android:id="@+id/homeFragment2"
            android:name="edu.quinnipiac.ser210.githubapp.ui.fragments.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home">
        <action
                android:id="@+id/action_homeFragment2_to_createChatFragment"
                app:destination="@id/createChatFragment" />
        <action
                android:id="@+id/action_homeFragment2_to_chatFragment"
                app:destination="@id/chatFragment" />
        <action
                android:id="@+id/action_homeFragment2_to_infoFragment"
                app:destination="@id/infoFragment" />
    </fragment>
    <fragment
            android:id="@+id/chatFragment"
            android:name="edu.quinnipiac.ser210.githubapp.ui.fragments.ChatFragment"
            android:label="fragment_chat"
            tools:layout="@layout/fragment_chat">
        <action
                android:id="@+id/action_chatFragment_to_chatInfoFragment"
                app:destination="@id/chatInfoFragment" />
    </fragment>
    <fragment
            android:id="@+id/createChatFragment"
            android:name="edu.quinnipiac.ser210.githubapp.ui.fragments.CreateChatFragment"
            android:label="fragment_create_chat"
            tools:layout="@layout/fragment_create_chat">
        <action
                android:id="@+id/action_createChatFragment_to_chatFragment"
                app:destination="@id/chatFragment" />
    </fragment>
    <fragment
            android:id="@+id/chatInfoFragment"
            android:name="edu.quinnipiac.ser210.githubapp.ui.fragments.ChatInfoFragment"
            android:label="fragment_chat_info"
            tools:layout="@layout/fragment_chat_info" />
    <fragment
            android:id="@+id/infoFragment"
            android:name="edu.quinnipiac.ser210.githubapp.ui.fragments.InfoFragment"
            android:label="fragment_info"
            tools:layout="@layout/fragment_info" />
</navigation>